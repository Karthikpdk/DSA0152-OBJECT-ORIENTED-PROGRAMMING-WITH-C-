#include <iostream>
using namespace std;
template <typename T>
T min3(T a, T b, T c) {
    return (a < b && a < c) ? a : (b < c) ? b : c;
}
int main() {
    cout << "min3(1, 0, 2) = " << min3(1, 0, 2) << endl;
    cout << "min3(1.5, 0.5, 3.0) = " << min3(1.5, 0.5, 3.0) << endl;
    cout << "min3('a', 'b', 'c') = " << min3('a', 'b', 'c') << endl;
}
